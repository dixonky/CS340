<h1>Positions</h1>
<br>

<table id="positionTable">
      <tr>
        <th>Name</th>
        <th>Abbreviation</th>
    </tr>
     {{#each positions}}
        <tr>
            <td>{{pname}}</td>
             <td>{{abbreviation}}</td>
             <td>
                 <button onclick="deletePosition({{id}})">Delete</button>
             </td>
            <td><button onclick="location.href='/position/{{id}}'" type="button">
               Update</button></td>
        </tr>
    {{/each}}
</table>

<h2>Add Position</h2>
<form id="addPosition" method="post">
    <label >Name: </label>
    <input type="text" name="pname">
    <br>
    <label>Abbreviation: </label>
    <input type="text" name="abbreviation">
    <br>
     <input type="submit" id="addPosition" value="Submit">
</form>